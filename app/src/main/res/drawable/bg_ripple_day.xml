<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_fed698_alpha_70"> <!-- Ripple color -->

    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/color_fed698_alpha_70" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- or background color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</ripple>